extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text', placeholder='First name' name='first_name' required value=(undefined===designer ? '' : designer.first_name) )
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text', placeholder='Last name' name='last_name' required value=(undefined===designer ? '' : designer.last_name))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
