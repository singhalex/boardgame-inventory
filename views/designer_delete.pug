extends layout 

block content 

  h1 #{title}: #{designer.name}
  
  if designer_games.length 
    p #[strong Delete the following games before attempting to delete this designer.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Games
      dl 
        each game in designer_games 
          dt 
            a(href=game.url) #{game.title}
          dd #{game.description}
  else 
    p Are you sure you want to delete this Designer?

    form(method='POST')
      div.form-group
        input#designerid.form-control(type='hidden', name='designerid', value=designer._id)
      
      button.btn.btn-primary(type='submit') Delete